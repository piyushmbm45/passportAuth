<%- include('header') %>
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-7">
                            <img class="home-img" src="/img/undraw_confidential_letter_w6ux.png" alt="img">
                        </div>
                        <div class="col-5 ">
                            <div class="pt-5 pb-2">
                                <h1>User Authentication</h1>
                                <h2>Get Started</h2>
                                <h4>Already have an account ?</h4>
                            </div>
                            <div class="child">
                                <form action="/login" method="get">
                                    <button class="btn btn-outline-danger" type="submit">Sign In</button>
                                </form>
                            </div>
                            <div class="my-3">
                                Or
                            </div>
                            <div class="my-3 child">
                                <form action="/" method="post">
                                    <div class="my-2">
                                        <label for="name">Enter Your Name</label>
                                        <input class="form-control" type="text" name="name" placeholder="Name" required>
                                    </div>
                                    <div class="my-2">
                                        <label for="emailId">Enter Your Mail Id</label>
                                        <input class="form-control" type="email" name="username" placeholder="Email Id"
                                            required>
                                    </div>
                                    <div class="my-2">
                                        <label for="password">Enter Password</label>
                                        <input class="form-control" type="password" name="password"
                                            placeholder="Password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
                                            title="Must contain at least one  number and one uppercase and lowercase letter, and at least 8 or more characters"
                                            required>
                                    </div>
                                    <button class="btn btn-outline-dark my-2" type="submit">Sign Up</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <%- include('footer') %>